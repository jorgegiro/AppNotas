@using ServiciosDeAplicacion.ViewModels
@model NotaEditableVM
@{
    ViewData["Title"] = "Nueva";

    string accion = Model is NotaExistenteVM ? "Editar" : "Nueva";
}

<div class="col-md-8 mt-4">
    <div class="row">
        <div class="col">
            <h1>@accion Nota</h1>

            <form asp-action="@accion" method="post">

                @if (Model is NotaExistenteVM)
                {
                    @Html.HiddenFor(n => ((NotaExistenteVM)n).Id)
                }

                <div class="form-group">@Html.TextBoxFor(m => m.Titulo, new { @class = "form-control w-25", placeholder = "Titulo" })</div>

                <div class="form-group">@Html.TextAreaFor(m => m.Contenido, new { @class = "form-control w-50" })</div>

                <input type="submit" class="btn btn-primary" value="Guardar" />
            </form>
        </div>
    </div>
</div>

@section Scripts
{
<script type="text/javascript">
    $('textarea').summernote({
        toolbar: [
            ['style', ['bold', 'italic', 'underline', 'clear']],
            ['font', ['strikethrough', 'superscript', 'subscript']],
            ['color', ['forecolor']],
        ]
    });
</script>
}